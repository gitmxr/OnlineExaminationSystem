@model IEnumerable<OnlineExaminationSystem.Models.Exam>

@{
    ViewData["Title"] = "Available Exams";
}

<!-- Page Heading -->
<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="display-4">Available Exams</h1>
        <p class="lead">Browse the list of scheduled exams.</p>
    </div>

    <!-- Table of Exams -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover shadow">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Duration</th>
                    <th>Actions</th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var exam in Model)
                {
                        <tr>
                            <td class="fw-bold">
                                <a href="@Url.Action("Details", "Exam", new { id = exam.ExamId })">
                                @exam.Title
                                </a>
                            </td>
                            <td>@exam.Description</td> 
                            <td>@exam.ExamDate.ToString("dd MMM yyyy")</td>
                            <td>@exam.Duration minutes</td>
                            <td>
                                <!-- Action Buttons with Better Colors -->
                                <a href="@Url.Action("Details", "Exam", new { id = exam.ExamId })" class="btn btn-outline-primary">View</a>
                                <a href="@Url.Action("Edit", "Exam", new { id = exam.ExamId })" class="btn btn-outline-warning">Edit</a>
                                <a href="@Url.Action("Delete", "Exam", new { id = exam.ExamId })" class="btn btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Create", "Exam")" class="btn btn-outline-success">Create New Exam</a>
    </div>
</div>
