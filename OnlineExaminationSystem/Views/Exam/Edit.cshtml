@model OnlineExaminationSystem.Models.Exam

@{
    ViewData["Title"] = "Edit Exam";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ExamId" />

    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" asp-for="Title" required />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" asp-for="Description" required></textarea>
    </div>
    <div class="form-group">
        <label for="ExamDate">Exam Date</label>
        <input type="date" class="form-control" id="ExamDate" asp-for="ExamDate" required />
    </div>
    <div class="form-group">
        <label for="Duration">Duration (minutes)</label>
        <input type="number" class="form-control" id="Duration" asp-for="Duration" required />
    </div>

    <button type="submit" class="btn btn-warning mt-3">Update Exam</button>
</form>
