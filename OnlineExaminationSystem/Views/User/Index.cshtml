@model IEnumerable<OnlineExaminationSystem.Models.User>

@{
    ViewData["Title"] = "User List";
}

<!-- Page Heading -->
<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="display-4">Registered Users</h1>
        <p class="lead">View and manage all users in the system.</p>
    </div>

    <!-- Table of Users -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover shadow">
            <thead class="table-dark">
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="fw-bold">@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>
                            <a href="@Url.Action("Details", "User", new { id = user.UserId })" class="btn btn-outline-primary btn-sm">Details</a>
                            <a href="@Url.Action("Edit", "User", new { id = user.UserId })" class="btn btn-outline-warning btn-sm">Edit</a>
                            <a href="@Url.Action("Delete", "User", new { id = user.UserId })" class="btn btn-outline-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Create New User Button -->
    <div class="text-end mt-3">
        <a href="@Url.Action("Create", "User")" class="btn btn-success">Create New User</a>
    </div>
</div>
